<h1>Editing Book</h1>
<%= form_for(@book, url:"/books/#{@book.id}/edit") do |f| %>

	<% if @book.errors.any? %>
	    <div class = "alert alert-warning">
	        <ul>
	            <% @book.errors.full_messages.each do |message| %>
	                <li><%= message %></li>
	            <% end %>
	        </ul>
	    </div>
	<% end %>

	<p>Title</p>
	<%= f.text_field :title %>

	<p>Body</p>
	<%= f.text_area :body %>

	<%= f.submit "Update book" %>
<% end %>

<span><%= link_to "Show", book_path %><span> | </span></span><%= link_to 'Back', books_path %></span>
